
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    >
      <RelativeLayout
        android:layout_height="50dp"
       android:layout_width="match_parent"
        android:background="#008EEF"
      >
          <Button android:id="@+id/back_main"
              android:layout_height="match_parent"
              android:layout_width="60dp"
              android:background="@drawable/btn_style"
              android:paddingLeft="20dp"
              android:layout_alignParentLeft="true"
              android:gravity="center"
              android:drawableLeft="@drawable/btn_back" />
          <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_toRightOf="@id/back_main"
             android:text="个人中心"
             android:textColor="#FFFFFF"
             android:textSize="18sp"
             android:gravity="center_vertical"
             />
      </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#99cccccc"
        ></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/btn_normalstyle"
        >
        <com.aunt.widget.CircleImageView
            android:layout_alignParentLeft="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/own_picture"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            app:border_width="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/school_target"
            app:border_color="#ccc"/>

        <TextView
            android:id="@+id/owner_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="啊啊"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/own_picture"
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/own_picture"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#99cccccc"
        ></LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
        android:drawableLeft="@drawable/btn_style"
    android:orientation="horizontal"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:paddingLeft="12dp"
                android:drawablePadding="16dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/out_email"
                android:text="abcd@gmail.com"
                android:drawableLeft="@drawable/mail_small"
                android:textSize="14sp"
                android:background="@drawable/btn_normalstyle"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#99cccccc"></View>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/own_route"
                android:drawableLeft="@drawable/route"
                android:paddingLeft="12dp"
                android:drawablePadding="16dp"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:text="无路线"
                android:textSize="14sp"
                android:background="@drawable/btn_normalstyle"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#99cccccc"></View>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="#ffffff">
        <Button
            android:id="@+id/own_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="更多"
            android:drawableLeft="@drawable/own_more"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:drawablePadding="16dp"
            android:background="@drawable/btn_normalstyle"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#99cccccc"></LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:orientation="horizontal">
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="退出登录"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@drawable/btn_normalstyle"/></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99cccccc"></LinearLayout>
</LinearLayout>