<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aunt.stealen.message_activty">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#008EEF">
        <Button android:id="@+id/back_msg"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:background="@drawable/btn_style"
            android:paddingLeft="20dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:drawableLeft="@drawable/btn_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="吐槽墙"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />
        <ImageView android:id="@+id/deliver"
            android:layout_height="match_parent"
            android:src="@drawable/writer"
            android:layout_width="40dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
             />
    </RelativeLayout>
    <com.aunt.view.RefreshableView
        android:id="@+id/msg_refer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mesg_lst"></ListView>
    </com.aunt.view.RefreshableView>
</LinearLayout>
