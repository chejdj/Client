<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp">
    <com.aunt.widget.CircleImageView
        android:id="@+id/msg_picture"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/school_target"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
      android:layout_toRightOf="@id/msg_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/msg_name"
        android:text="某同学"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:id="@+id/msg"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/msg_picture"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/good_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:text="0"
        />
    <com.aunt.widget.ThumbUpView
        android:id="@+id/tpv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/good_number"
        android:layout_marginRight="4dp"
        app:cracksColor="#33475f"
        app:edgeColor="#9d55b8"
        app:fillColor="#ea8010"
        app:unlikeType="1"
        />
</RelativeLayout>